    <link href='https://fonts.googleapis.com/css?family=Josefin+Sans|Playfair+Display' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="/css/master.css" charset="utf-8">
</head>

<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">Recipe Box</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    {{#if currentUser}}
                        <li><a href="/user/{{userId}}/recipes" class="nav_link">{{currentUser}}</a></li>
                        <li><a href="/recipes" class="nav_link">Feed</a></li>
                        <li><a href="/signout" class="nav_link">Sign Out</a></li>
                    {{else}}
                        <li><a href="/signin" class="nav_link">Sign In</a></li>
                        <li><a href="/signup" class="nav_link">Sign Up</a></li>
                        <li><a href="/guest" class="nav_link">Guest View</a></li>
                    {{/if}}
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
