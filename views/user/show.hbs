<div class="show-wrapper">

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-7">
                <h3>{{recipe.title}}</h3>
                <p>Ingredients:</p>
                <div class="show-boxes">
                    <span class="breakLines"> {{recipe.ingredients}}</span>
                </div>
                <p>Directions:</p>
                <div class="show-boxes">
                  <span class="breakLines"> {{recipe.directions}}</span>
                </div>
            </div>
            <div class="col-md-5">
                <img src="{{recipe.photo_url}}" alt="" />
            </div>
        </div>
        <a href="/user/{{userId}}/recipes/{{recipe.id}}/edit">Edit</a>
        <form action="/user/{{userId}}/recipes/{{recipe.id}}?_method=DELETE" method="post">
            <input class="button-delete" type="submit" value="Delete!">
        </form>
        <form action="/user/{{userId}}/recipes/{{recipe.id}}" method="post">
            <div class="form-group">
                <label for="comment">New Comment</label>
                <textarea class="form-control" rows="3" id="comment" name="content"></textarea>
                <button type="submit" class="btn btn-default">Submit Comment</button>
            </div>
        </form>
    </div>

    <div class="container-fluid">
        <ul>
            {{#each comments}}
                <li>
                    {{content}}
                </li>
            {{/each}}
        </ul>
    </div>
</div>
